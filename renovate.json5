{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":semanticCommits"
  ],
  "schedule": [
    "after 9am every weekday",
    "before 5pm every weekday"
  ],
  "automerge": false,
  "automergeType": "branch",
  "packageRules": [
    {
      "matchManagers": [
        "github-actions"
      ],
      "reviewersFromCodeOwners": true,
      "reviewersSampleSize": 1,
      "enabled": true
    }
  ]
}
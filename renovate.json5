{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":semanticCommits"
  ],
  "schedule": [
    "after 09:00 and before 16:00 on Monday through Thursday"
  ],
  "automerge": false,
  "automergeType": "branch",
  "packageRules": [
    {
      "matchManagers": [
        "github-actions"
      ],
      "reviewersFromCodeOwners": true,
      "enabled": true
    }
  ]
}